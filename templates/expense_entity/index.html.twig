{% extends 'base.html.twig' %}

{% block title %}ExpenseEntity index{% endblock %}

{% block body %}
    <h1>ExpenseEntity index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Amount</th>
                <th>Name</th>
                <th>Type</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for expense_entity in expense_entities %}
            <tr>
                <td>{{ expense_entity.id }}</td>
                <td>{{ expense_entity.amount }}</td>
                <td>{{ expense_entity.name }}</td>
                <td>{{ expense_entity.type }}</td>
                <td>{{ expense_entity.date ? expense_entity.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_expense_entity_show', {'id': expense_entity.id}) }}">show</a>
                    <a href="{{ path('app_expense_entity_edit', {'id': expense_entity.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_expense_entity_new') }}">Create new</a>
{% endblock %}
