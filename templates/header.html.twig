{# templates/partials/header.html.twig #}
<header class="bg-white shadow p-4 fixed top-0 left-0 w-full z-50">
    <div class="container mx-auto flex justify-between items-center">
        <h1 class="text-lg font-semibold text-gray-800">
            <a href="{{ path('app_home_index') }}">Le Bon Compte</a>
        </h1>

        {% if app.user %}
            <!-- Menu burger géré avec Alpine.js -->
            <div x-data="{ open: false }" class="relative">
                <!-- Bouton d'ouverture du menu burger -->
                <button @click="open = !open" class="flex items-center focus:outline-none">
                    <span class="text-gray-700 mr-2">
                        Vous êtes connecté en tant que <span class="font-semibold">{{ app.user.email }}</span>
                    </span>
                    <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M19 9l-7 7-7-7"></path>
                    </svg>
                </button>

                <!-- Menu déroulant -->
                <div x-show="open" @click.away="open = false"
                     class="absolute right-0 mt-2 w-64 bg-white border rounded shadow-lg py-4"
                     x-transition:enter="transition ease-out duration-200"
                     x-transition:enter-start="opacity-0 transform scale-90"
                     x-transition:enter-end="opacity-100 transform scale-100"
                     x-transition:leave="transition ease-in duration-150"
                     x-transition:leave-start="opacity-100 transform scale-100"
                     x-transition:leave-end="opacity-0 transform scale-90">

                    <div class="px-4 mb-4">
                        {% if app.user and app.user.id is defined %}
                            <a href="{{ path('app_user_edit', {'id': app.user.id}) }}"
                               class="block text-green-600 hover:underline mb-2">
                                Modifier mon compte
                            </a>
                        {% else %}
                            <span class="block text-gray-500 mb-2">Impossible de modifier le compte</span>
                        {% endif %}
                        <a href="{{ path('app_logout') }}"
                           class="block text-blue-600 hover:underline">
                            Déconnexion
                        </a>
                    </div>

                    <!-- Boutons d'options -->
                    <div class="flex flex-col space-y-4 px-4">
                        <!-- Bouton pour ajouter une dépense -->
                        <a href="{{ path('app_expense_entity_new') }}"
                           class="bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700 focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 text-center">
                            Ajouter une dépense
                        </a>

                        <!-- Bouton pour ajouter un revenu -->
                        <a href="{{ path('app_income_entity_new') }}"
                           class="bg-gray-600 text-white py-2 px-4 rounded-lg hover:bg-gray-700 focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 text-center">
                            Ajouter un revenu
                        </a>

                        <!-- Bouton pour afficher la liste des profils utilisateurs -->
                        <a href="{{ path('app_user_profile_entity_index') }}"
                           class="bg-gray-600 text-white py-2 px-4 rounded-lg hover:bg-gray-700 focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 text-center">
                            Liste des profils
                        </a>

                        <!-- Bouton pour importer un CSV -->
                        <a href="{{ path('import_csv') }}"
                           class="bg-gray-600 text-white py-2 px-4 rounded-lg hover:bg-gray-700 focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 text-center">
                            Import CSV
                        </a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="text-gray-700">
                <a href="{{ path('app_login') }}" class="text-blue-600 hover:underline">Connexion</a> |
                <a href="{{ path('app_register') }}" class="text-blue-600 hover:underline">Inscription</a>
            </div>
        {% endif %}
    </div>
</header>
