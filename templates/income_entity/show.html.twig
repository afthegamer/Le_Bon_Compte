{% extends 'base.html.twig' %}

{% block title %}Income Details{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center bg-gray-100 py-8">
        <div class="w-full max-w-4xl bg-white shadow-md rounded-lg p-6">
            <h1 class="text-2xl font-bold text-gray-800 text-center mb-6">Income Details</h1>

            <!-- Tableau des détails -->
            <table class="min-w-full bg-white border border-gray-200 rounded-lg shadow-sm">
                <tbody>
                <tr class="border-t border-gray-200">
                    <th class="px-4 py-2 text-left text-gray-700 font-medium bg-gray-50">Name</th>
                    <td class="px-4 py-2 text-gray-800">{{ income_entity.name }}</td>
                </tr>
                <tr class="border-t border-gray-200">
                    <th class="px-4 py-2 text-left text-gray-700 font-medium bg-gray-50">Amount</th>
                    <td class="px-4 py-2 text-gray-800">{{ income_entity.amount }}</td>
                </tr>
                <tr class="border-t border-gray-200">
                    <th class="px-4 py-2 text-left text-gray-700 font-medium bg-gray-50">Type</th>
                    <td class="px-4 py-2 text-gray-800">{{ income_entity.type }}</td>
                </tr>
                <tr class="border-t border-gray-200">
                    <th class="px-4 py-2 text-left text-gray-700 font-medium bg-gray-50">user cause dépense</th>
                    <td class="px-4 py-2 text-gray-800">{{ income_entity.userProfileEntity.firstName }} {{ income_entity.userProfileEntity.lastName }}</td>
                </tr>
                <tr class="border-t border-gray-200">
                    <th class="px-4 py-2 text-left text-gray-700 font-medium bg-gray-50">Date</th>
                    <td class="px-4 py-2 text-gray-800">
                        {{ income_entity.date ? income_entity.date|date('Y-m-d') : 'N/A' }}
                    </td>
                </tr>
                {% if income_entity.categoryEntity %}
                    <tr class="border-t border-gray-200">
                        <th class="px-4 py-2 text-left text-gray-700 font-medium bg-gray-50">Category</th>
                        <td class="px-4 py-2 text-gray-800">{{ income_entity.categoryEntity.name }}</td>
                    </tr>
                {% endif %}
                {% if income_entity.subcategoryEntity %}
                    <tr class="border-t border-gray-200">
                        <th class="px-4 py-2 text-left text-gray-700 font-medium bg-gray-50">Subcategory</th>
                        <td class="px-4 py-2 text-gray-800">{{ income_entity.subcategoryEntity.name }}</td>
                    </tr>
                {% endif %}
                </tbody>
            </table>


            <div>
                <a href="{{ path('app_income_entity_edit', {'id': income_entity.id}) }}">
                    <button type="button"
                            class="w-full bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700 focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
                        edit
                    </button>
                </a>
            </div>


            <div class="mt-6 flex justify-between">
                <!-- Lien vers la liste -->
                <a href="{{ path('app_home_index') }}"
                   class="inline-block bg-gray-600 text-white py-2 px-4 rounded-lg hover:bg-gray-700">
                    Back to List
                </a>

                <!-- Formulaire de suppression -->
                {{ include('income_entity/_delete_form.html.twig', { 'attr': { 'class': 'inline' } }) }}
            </div>
        </div>
    </div>
{% endblock %}
