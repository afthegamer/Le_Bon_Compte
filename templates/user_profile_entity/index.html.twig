{% extends 'base.html.twig' %}

{% block title %}UserProfileEntity Index{% endblock %}

{% block body %}
    <div class="min-h-screen flex flex-col items-center justify-center py-8 bg-gray-100">
        <h1 class="text-2xl font-bold mb-6 text-gray-800">UserProfileEntity Index</h1>

        <div class="w-full max-w-4xl bg-white shadow-md rounded-lg p-6">
            <table class="min-w-full border-collapse border border-gray-300">
                <thead class="bg-gray-200">
                <tr>
                    <th class="px-4 py-2 border border-gray-300 text-left text-sm font-medium text-gray-700">Id</th>
                    <th class="px-4 py-2 border border-gray-300 text-left text-sm font-medium text-gray-700">First Name</th>
                    <th class="px-4 py-2 border border-gray-300 text-left text-sm font-medium text-gray-700">Last Name</th>
                    <th class="px-4 py-2 border border-gray-300 text-left text-sm font-medium text-gray-700">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for user_profile_entity in user_profile_entities %}
                    <tr class="hover:bg-gray-100">
                        <td class="px-4 py-2 border border-gray-300 text-sm text-gray-700">{{ user_profile_entity.id }}</td>
                        <td class="px-4 py-2 border border-gray-300 text-sm text-gray-700">{{ user_profile_entity.firstName }}</td>
                        <td class="px-4 py-2 border border-gray-300 text-sm text-gray-700">{{ user_profile_entity.lastName }}</td>
                        <td class="px-4 py-2 border border-gray-300 text-sm text-gray-700">
                            <a href="{{ path('app_user_profile_entity_show', {'id': user_profile_entity.id}) }}" class="text-blue-600 hover:text-blue-500">Show</a>
                            <a href="{{ path('app_user_profile_entity_edit', {'id': user_profile_entity.id}) }}" class="ml-4 text-blue-600 hover:text-blue-500">Edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="px-4 py-2 border border-gray-300 text-center text-sm text-gray-500">No records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <div class="mt-6">
                <a href="{{ path('app_user_profile_entity_new') }}" class="inline-block bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700">
                    Create New
                </a>
            </div>
        </div>
    </div>
{% endblock %}
