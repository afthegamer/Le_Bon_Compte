{% extends 'base.html.twig' %}

{% block title %}Modifier le profil utilisateur{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center py-8">
        <div class="w-full max-w-2xl bg-white shadow-md rounded-lg p-6">
            <h1 class="text-2xl font-bold mb-6 text-gray-800 text-center">Modifier le profil utilisateur</h1>
            {{ form_start(form, { 'attr': { 'class': 'space-y-6' } }) }}
            <!-- Champ First Name -->
            <div>
                {{ form_label(form.firstName, 'First Name', { 'label_attr': { 'class': 'block text-sm font-medium text-gray-700' } }) }}
                {{ form_widget(form.firstName, { 'attr': { 'class': 'mt-1 block w-full px-4 py-2 border border-gray-400 rounded-lg bg-gray-50 text-gray-900 focus:ring-blue-500 focus:border-blue-500 shadow-sm', 'placeholder': 'Enter your first name' } }) }}
                {{ form_errors(form.firstName) }}
            </div>

            <!-- Champ Last Name -->
            <div>
                {{ form_label(form.lastName, 'Last Name', { 'label_attr': { 'class': 'block text-sm font-medium text-gray-700' } }) }}
                {{ form_widget(form.lastName, { 'attr': { 'class': 'mt-1 block w-full px-4 py-2 border border-gray-400 rounded-lg bg-gray-50 text-gray-900 focus:ring-blue-500 focus:border-blue-500 shadow-sm', 'placeholder': 'Enter your last name' } }) }}
                {{ form_errors(form.lastName) }}
            </div>

            <!-- Update button -->
            <div>
                <button type="submit"
                        class="w-full bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700 focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
                    Mise à jour
                </button>
            </div>

            {{ form_end(form) }}

            <div class="mt-6 flex justify-between">
                <!-- Link to the list -->
                <a href="{{ path('app_user_profile_entity_index') }}"
                   class="inline-block bg-gray-600 text-white py-2 px-4 rounded-lg hover:bg-gray-700">
                    Retour à la liste
                </a>

                <!-- Deletion form -->
                {{ include('user_profile_entity/_delete_form.html.twig', { 'attr': { 'class': 'inline' } }) }}
            </div>
        </div>
    </div>
{% endblock %}
