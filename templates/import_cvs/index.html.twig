{% extends 'base.html.twig' %}

{% block title %}Importer un Fichier CSV{% endblock %}

{% block body %}
    <div class="container mx-auto p-4">
        <h1 class="text-2xl font-bold text-center mb-6">Importer et Mapper un Fichier CSV</h1>
        <form id="csv-upload-form" action="{{ path('upload_csv') }}" method="post" enctype="multipart/form-data">

            <div class="mb-4">
                <h2 class="text-lg font-medium">Profils associ√©s :</h2>
                <select name="profile_id" class="form-select border border-gray-300 rounded-md p-2 w-full focus:ring-2 focus:ring-blue-500 focus:outline-none">
                    {% for profile in userProfiles %}
                        <option value="{{ profile.id }}">{{ profile.firstName }} {{ profile.lastName }}</option>
                    {% endfor %}
                </select>
            </div>

            <div {{ react_component('MapperCSV') }}></div>
            <input type="hidden" name="mapping" id="mapping" value="{}">
            <input type="file" name="csv_file" id="csv_file" hidden>
        </form>
    </div>
{% endblock %}
