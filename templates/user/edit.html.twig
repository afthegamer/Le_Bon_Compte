{% extends 'base.html.twig' %}

{% block title %}Modifier mon compte{% endblock %}

{% block body %}
    <div class="flex items-center justify-center min-h-screen">
        <div class="w-full max-w-md px-6 py-4 bg-white shadow-md rounded-lg">
            <h2 class="text-xl font-semibold text-gray-800 mb-4 text-center">Modifier mon Profil</h2>

            {% for message in app.flashes('success') %}
                <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg text-center mb-4">
                    {{ message }}
                </div>
            {% endfor %}

            {{ include('user/_form.html.twig', {'button_label': 'Mettre à jour'}) }}

            <!-- Bouton Retour -->
            <div class="mt-6 flex justify-center">
                <a href="{{ path('app_home_index') }}"
                   class="inline-flex items-center bg-blue-500 text-white font-semibold py-3 px-6 rounded-lg shadow-md transition
              hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-offset-2">
                    ← Retour à l'Accueil
                </a>
            </div>

        </div>
    </div>
{% endblock %}
