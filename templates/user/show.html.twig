{% extends 'base.html.twig' %}

{% block title %}UserEntity{% endblock %}

{% block body %}
    <h1>UserEntity</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user_entity.id }}</td>
            </tr>
            <tr>
                <th>E-mail</th>
                <td>{{ user_entity.email }}</td>
            </tr>
            <tr>
                <th>Rôles</th>
                <td>{{ user_entity.roles ? user_entity.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Mot de passe</th>
                <td>{{ user_entity.password }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_user_index') }}">Retour à la liste</a>

    <a href="{{ path('app_user_edit', {'id': user_entity.id}) }}">Modifier</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
